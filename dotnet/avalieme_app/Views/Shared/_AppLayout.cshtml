<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Avalie-me.com</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />

        <!-- CSS -->
        @Styles.Render("~/Content/fonts/stylesheet.css")
        @Styles.Render("~/Content/bootstrap/css/bootstrap.min.css")
        @Styles.Render("~/Content/css/style.css")
        <!-- CSS -->

        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>

        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        
        @Scripts.Render("~/bundles/bootstrap/js/bootstrap.min.js")
        @Scripts.Render("~/Content/")
        @RenderSection("scripts", required: false)
    </body>
</html>
